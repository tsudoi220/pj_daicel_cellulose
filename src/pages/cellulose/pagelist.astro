---
import { Head } from "~/components/global/Head";
import { metaData } from "~/constants/metaData";
---

<!DOCTYPE html>
<html lang="ja">
  <Head id="pagelist" />
  <body>
    <style is:inline>
      body {
        font: 14px/1.231 "メイリオ", Helvetica, Arial, sans-serif;
        -webkit-text-size-adjust: none;
      }
      header {
        position: relative;
        padding: 32px 0 0;
        color: #000;
        font-size: 20px;
        text-align: center;
      }
      main {
        padding: 32px;
      }
      table {
        margin: 0 auto;
        background-color: #fff;
        border: #d0bfc3 1px solid;
        border-collapse: collapse;
        border-spacing: 0;
      }
      table td,
      table th {
        border: #d0bfc3 1px solid;
        border-width: 0 0 1px 1px;
        padding: 7px;
        vertical-align: top;
      }
      table th {
        background: #999;
        color: #fff;
        text-align: center;
      }
      table th:nth-child(1) {
        width: 3%;
      }
      table th:nth-child(2) {
        width: 30%;
      }
      table th:nth-child(3) {
        width: 34%;
      }
      table th:nth-child(4) {
        width: 10%;
      }
      table th:nth-child(5) {
        width: 23%;
      }
      .center {
        text-align: center;
      }
      footer {
        text-align: center;
        color: #000;
        padding: 0;
        position: relative;
      }
      footer p {
        margin: 15px 0;
      }
      .title_1 {
        padding-left: 20px;
      }
    </style>
    <header>
      <h1>画面一覧</h1>
    </header>
    <main>
      <table>
        <tbody
          ><tr>
            <th>ID</th>
            <th>ページ名</th>
            <th>ファイル名</th>
            <th>確認用URL</th>
            <!-- <th width="8%">本番URL</th> -->
            <th>ステータス</th>
          </tr>
          {
            metaData.pages &&
              metaData.pages.map(
                (page, index) =>
                  !page.isPageList && (
                    <tr>
                      <td class="center">{index}</td>
                      <td class="title_1">{page.title}</td>
                      <td>
                        <a href={page.path} target="_blank">
                          {page.path}
                        </a>
                      </td>
                      <td class="center">
                        <a href={page.path} target="_blank">
                          ■
                        </a>
                      </td>
                      <td>{page.status}</td>
                    </tr>
                  )
              )
          }
        </tbody>
      </table>
    </main>
    <!-- <footer>
      <p>© aru-inc</p>
    </footer> -->
  </body>
</html>
